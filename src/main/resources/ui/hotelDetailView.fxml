<?xml version="1.0" encoding="UTF-8"?>

<!-- HotelDetailView.fxml -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.HotelDetailController">
    <top>
        <Label fx:id="hotelNameLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="hotelCityLabel"/>
            <Label fx:id="hotelRatingLabel"/>
            <Label fx:id="hotelDescriptionLabel" wrapText="true"/>

        </VBox>
    </center>
</BorderPane>
